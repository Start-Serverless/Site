---
import Post from "../../../components/Post.astro";
import { getCollection } from "astro:content";
import BlogCollectionLayout from "../../../layouts/BlogCollectionLayout.astro";

const allBlogPosts = await getCollection("blog");
const { tag } = Astro.params;

if (tag === undefined) {
    throw new Error("Slug is required");
}

const filteredPosts = allBlogPosts.filter((post) =>
    post.data.tags.includes(tag)
);

if (filteredPosts === undefined || filteredPosts.length == 0) {
    return Astro.redirect("/404");
}
---

<BlogCollectionLayout title={tag}>
    <div class="content">
        <h1 class="tag">Tag: {tag}</h1>
        <ul class="post-archive">
            {filteredPosts.map((post) => <Post post={post} />)}
        </ul>
    </div>
</BlogCollectionLayout>

<style>
    .content {
        /* max-width: 1000px; */
        padding-top: 64px;
        margin-right: auto;
        margin-left: auto;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: flex-start;
    }

    h1.tag {
        text-transform: capitalize;
        padding-left: 40px;
        display: inline;
        font-family: Electrolize, sans-serif;
        color: #333;
    }

    .post-archive {
        align-self: center;
        list-style-type: none;
        padding-top: 64px;
        padding-bottom: 64px;
        margin-left: auto;
        margin-right: auto;
    }

    @media screen and (max-width: 991px) {
        .post-archive {
            margin-top: 0px;
            padding-top: 64px;
        }
    }
</style>
