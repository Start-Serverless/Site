---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const allBlogPosts = await getCollection("blog");
const tags = [...new Set(allBlogPosts.map((post) => post.data.tags).flat())];
---

<Layout title="Tag Index">
    <body>
        <div class="hero">
            <h1 class="heading">THINK / SERVERLESS</h1>
        </div>
        <div class="content">
            <ul class="post-archive">
                {
                    tags.map((tag) => (
                        <p class="tag">
                            <a href={`/tags/${tag}`}>{tag}</a>
                        </p>
                    ))
                }
            </ul>
        </div>
    </body>
</Layout>

<style>
    .hero {
        display: flex;
        padding-top: 110px;
        padding-bottom: 110px;
        -webkit-box-pack: center;
        justify-content: center;
        align-items: center;
        background-image: linear-gradient(45deg, #00d0b7, #00e399);
    }

    .heading {
        font-family: Electrolize, sans-serif;
        font-size: 54px;
        text-align: center;
    }

    .content {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        background-color: #fff;
    }

    .post-archive {
        max-width: 1000px;
        list-style-type: none;
        padding-top: 64px;
        padding-bottom: 64px;
        margin-left: auto;
        margin-right: auto;
    }

    @media screen and (max-width: 991px) {
        .post-archive {
            margin-top: 0px;
            padding-top: 64px;
        }
    }

    @media screen and (max-width: 767px) {
        .heading {
            line-height: 70.2px;
        }

        .hero {
            padding-left: 36px;
            padding-right: 36px;
        }
    }

    @media screen and (max-width: 479px) {
        .heading {
            font-size: 40px;
            line-height: 52px;
        }
    }
</style>
