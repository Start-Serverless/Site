---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Contact from "../components/Contact.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
---

<Layout title="START / SERVERLESS">
  <main>
    <div class="scroll">
      <Navbar />
      <Hero />
      <Contact />
    </div>
  </main>
</Layout>

<style>
  html {
    background: #2f2f2f;
    color: #ffffff;
    font-family: "Titillium Web";
  }

  .scroll {
    overflow-x: hidden;
    overflow-y: auto;
    height: 100%;
  }

  .navbar-logo-left {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: flex-start;
    padding: 0px 24px;
    background: #424242;
    width: 100%;
    /* height: 5.15vh; */
    height: 69px;
    border-radius: 0px;
  }

  p {
    font-size: 18px;
  }

  .navbar-container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 0px;
    /* width: 1200px; */
    width: 95%;
    height: 69px;
    border-radius: 0px;
  }

  .navbar-content {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 0px;
    gap: 625px;
    width: 100%;
    height: 69px;
    border-radius: 0px;
  }

  .navbar-brand {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0px;
    height: 36px;
  }

  .navbar-menu {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0px;
    gap: 32px;
  }

  .services {
    height: 100vh;
    width: 100vw;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: Electrolize;
    font-size: 56px;
  }
</style>
