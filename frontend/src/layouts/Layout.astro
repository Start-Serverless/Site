---
import favicon from "../images/favicon.png";
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>{title}</title>
        <meta content="width=device-width, initial-scale=1" name="viewport" />
        <meta
            name="description"
            content="Start Serverless is a technology consulting business helping customers deliver on their goals."
        />
        <link href={favicon.src} rel="shortcut icon" type="image/x-icon" />
        <link href="/assets/webclip.png" rel="apple-touch-icon" />
    </head>
    <body class="body">
        <slot />
    </body>
</html>

<style is:global>
    * {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }

    html {
        height: 100%;
    }

    html.w-mod-touch * {
        background-attachment: scroll !important;
    }

    body {
        margin: 0;
        min-height: 100%;
        font-family: Arial, sans-serif;
        font-size: 14px;
        line-height: 20px;
        color: #333;
        background-color: #181818;
    }
</style>
