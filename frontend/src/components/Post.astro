---
import splash from "../images/christopher-gower-m_HRfLhgABo-unsplash-p-500.jpg";

export interface Props {
    url: string;
    title: string;
}

const { url, title } = Astro.props;
---

<li>
    <a href={url} class="post">
        <img src={splash.src} alt="" width="390" height="260" class="splash" />
        <div class="post-content">
            <h2 class="heading">{title}</h2>
            <p class="preview">
                Lorem ipsum dolor sit amet consectetur adipisicing elit.
                Suscipit eaque omnis alias molestiae numquam facilis cupiditate
                dolores doloribus, tenetur ex iusto, quod ratione recusandae ut
                quam. Magnam sint aspernatur commodi!
            </p>
            <span class="read-more">// READ MORE</span>
        </div>
    </a>
</li>
<style>
    .post {
        display: flex;
        flex-direction: row;
        align-content: space-between;
        grid-column-gap: 48px;
        grid-row-gap: 48px;
        margin-bottom: 64px;
    }

    .post-content {
        display: flex;
        flex-direction: column;
    }

    a {
        text-decoration: none;
        color: #333 !important;
    }

    .heading {
        font-family: Electrolize, sans-serif;
        font-size: 32px;
        margin-top: 20px;
    }

    .preview {
        grid-column-gap: 10px;
        grid-row-gap: 10px;
        font-family: "Titillium Web", sans-serif;
    }

    .read-more {
        color: #181818;
    }

    .read-more:hover {
        color: #00e399;
        font-family: "Titillium Web", sans-serif;
        font-weight: bold;
    }

    @media screen and (max-width: 991px) {
        .post {
            flex-direction: column;
            align-items: flex-start;
            grid-column-gap: 20px;
            grid-row-gap: 20px;
        }
    }

    @media screen and (max-width: 479px) {
        .splash {
            width: 285px;
            height: auto;
        }
    }
</style>
