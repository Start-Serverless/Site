---
import { Amplify, withSSRContext } from "aws-amplify";
import { submitContact } from "../graphql/mutations";


Amplify.configure({
	"aws_appsync_graphqlEndpoint": "https://api.startserverless.dev/graphql",
	"aws_appsync_region": "us-east-1",
	"aws_appsync_authenticationType": "AWS_IAM",
});

enum FormStateType {
    start = "START",
    success = "SUCCESS",
    fail = "FAIL",
}

let formState: FormStateType = FormStateType.start;
if (Astro.request.method === "POST") {
    try {
        const SSR = withSSRContext();
        const data = await Astro.request.formData();
        const response = await SSR.API.graphql({
            query: submitContact,
            variables: {
                input: {
                    name: data.get("name"),
                    phone: data.get("phone"),
                    email: data.get("email"),
                },
            },
        });
        formState = FormStateType.success;
    } catch (error) {
        formState = FormStateType.fail;
        console.log(JSON.stringify(error));
    }
}
---

<div class="section">
    <div id="contact-form" class="contact-form">
        <div class="frame-2">
            <div class="text-6">LET&#x27;S TALK!</div>
        </div>

        {
            formState === FormStateType.fail ? (
                <div class="w-form-fail">
                    <div class="text-block-2">
                        Oops! Something went wrong while submitting the form.
                        Please try again.
                    </div>
                </div>
            ) : null
        }
        {
            formState === FormStateType.success ? (
                <div class="w-form-done">
                    <div class="text-block">
                        Thank you! We&#x27;ll be in touch soon.
                    </div>
                </div>
            ) : (
                <div class="w-form">
                    <form method="POST" class="form">
                        <label for="name" class="field-label">
                            {" "}
