<div class="navbar-logo">
    <div class="navbarcontainer w-container">
        <div class="navbar-content">
            <div class="navbar-brand">
                <a href="index.html" class="w-inline-block w--current">
                    <img
                        src="/assets/Start-serverless-logo-green.svg"
                        loading="lazy"
                        alt=""
                        class="vectors-wrapper"
                    />
                </a>
            </div>
            <input type="checkbox" class="menu-toggle" />
            <label class="menu-button-container" for="menu-toggle">
                <div class="menu-button"></div>
            </label>
            <ul class="navbar-menu">
                <li class="navbar-link navigation-text"><a>About</a></li>
                <li class="navbar-link navigation-text"><a>Blog</a></li>
                <li class="navbar-link">
