<style>
    .menu-toggle {
        display: none;
    }

    .navbar-logo {
        display: flex;
        width: 100%;
        padding-right: 24px;
        padding-left: 24px;
        -webkit-box-pack: center;
        justify-content: center;
        -webkit-box-align: start;
        align-items: flex-start;
        grid-column-gap: 0px;
        grid-row-gap: 0px;
        background-color: #181818;
    }

    .w-container {
        margin-left: auto;
        margin-right: auto;
    }

    .navbarcontainer {
        display: flex;
        width: 100%;
        max-width: 1200px;
        -webkit-box-pack: center;
        justify-content: center;
        align-items: center;
        grid-column-gap: 0px;
        grid-row-gap: 0px;
    }

    .navbar-content {
        display: flex;
        width: 100%;
        max-width: 1200px;
        -webkit-box-pack: justify;
        justify-content: space-between;
        -webkit-box-align: center;
        align-items: center;
    }

    .w-inline-block {
        max-width: 100%;
        display: inline-block;
    }

    .navbar-brand {
        display: flex;
        -webkit-box-pack: start;
        justify-content: flex-start;
        -webkit-box-align: start;
        align-items: flex-start;
        -webkit-box-flex: 0;
        flex: 0 auto;
        grid-column-gap: 0px;
        grid-row-gap: 0px;
    }

    .vectors-wrapper {
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        height: 43.41328811645508px;
        -webkit-box-pack: center;
        -webkit-justify-content: center;
        -ms-flex-pack: center;
        justify-content: center;
        -webkit-box-align: center;
        -webkit-align-items: center;
        -ms-flex-align: center;
        align-items: center;
        -webkit-box-flex: 0;
        -webkit-flex: 0 auto;
        -ms-flex: 0 auto;
        flex: 0 auto;
        grid-column-gap: 0px;
        grid-row-gap: 0px;
        -o-object-fit: cover;
        object-fit: cover;
    }

    .navbar-menu {
        display: flex;
        position: relative;
        -webkit-box-pack: start;
        justify-content: flex-start;
        -webkit-box-align: center;
        align-items: center;
        -webkit-box-flex: 0;
        flex: 0 auto;
        grid-column-gap: 32px;
        grid-row-gap: 32px;
        float: right;
    }

    .navbar-link {
        display: flex;
        cursor: pointer;
        -webkit-box-pack: start;
        justify-content: flex-start;
        -webkit-box-align: start;
        align-items: flex-start;
        -webkit-box-flex: 0;
        flex: 0 auto;
        grid-column-gap: 0px;
        grid-row-gap: 0px;
        text-decoration: none;
    }

    .navigation-text {
        font-family: Titillium Web, sans-serif;
        color: #fff;
        font-size: 18px;
        line-height: 150%;
        font-weight: 400;
        letter-spacing: 0em;
    }

    .navigation-text:hover {
        color: #00e399;
    }

    .navigation-text:active {
        color: #b1b1b1;
    }

    .button {
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        margin-right: 140px;
        margin-left: 140px;
        padding: 0px;
        -webkit-box-pack: center;
        -webkit-justify-content: center;
        -ms-flex-pack: center;
        justify-content: center;
        -webkit-box-align: center;
        -webkit-align-items: center;
        -ms-flex-align: center;
        align-items: center;
        -webkit-box-flex: 0;
        -webkit-flex: 0 auto;
        -ms-flex: 0 auto;
        flex: 0 auto;
        grid-column-gap: 8px;
        grid-row-gap: 8px;
        border-style: solid;
        border-width: 1px;
        border-color: #00e399;
        background-color: transparent;
        -webkit-transition: background-color 400ms ease;
        transition: background-color 400ms ease;
        font-family: "Titillium Web", sans-serif;
        font-weight: 300;
        letter-spacing: 4px;
        text-decoration: none;
    }

    .button:hover {
        background-color: #00e399;
        color: #181818;
    }

    .button:active {
        box-shadow: inset 2px 2px 0 1px #000;
    }

    .button.reach-out {
        padding-top: 16px;
        padding-bottom: 16px;
    }

    .button.reach-out:active {
        border-color: #00e399;
        box-shadow: inset 3px 3px 0 2px #000;
    }

    .button.header {
        margin-right: 0px;
        margin-left: 24px;
    }

    .get-started {
        display: block;
        padding: 8px 16px;
        font-family: "Titillium Web", sans-serif;
        color: #fff;
        font-size: 16px;
        line-height: 139.9999976158142%;
        font-weight: 300;
        letter-spacing: 2px;
    }

    .get-started:hover {
        color: #181818;
    }

    @media screen and (max-width: 479px) {
        .vectors-wrapper {
            width: auto;
            height: auto;
            max-width: 85%;
            padding-right: 0px;
            padding-left: 0px;
            -webkit-box-flex: 0;
            -webkit-flex: 0 auto;
            -ms-flex: 0 auto;
            flex: 0 auto;
        }

        .button.reach-out {
            margin-right: 40px;
            margin-left: 40px;
        }

        .button.header {
            width: 75%;
            margin-right: auto;
            margin-left: auto;
        }
    }

    @media screen and (max-width: 991px) {
        .navbar-link {
            -webkit-box-pack: center;
            -webkit-justify-content: center;
            -ms-flex-pack: center;
            justify-content: center;
            background-color: #181818;
        }

        .button.header {
            width: 40%;
            margin-right: auto;
            margin-bottom: 24px;
            margin-left: auto;
        }

        .navbar-menu {
            display: flex;
            transform: translateY(0px) translate(0px);
            transition: transform 400ms ease 0s;
            /* display: block !important; */
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: #c8c8c8;
            text-align: center;
            overflow: visible;
            min-width: 200px;
        }

        .menu-button-container {
            display: flex;
            height: 100%;
            width: 30px;
            cursor: pointer;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            /* padding-right: 18px; */
        }

        .menu-toggle {
            display: none;
        }

        .menu-button,
        .menu-button::before,
        .menu-button::after {
            display: block;
            background-color: #fff;
            position: relative;
            float: right;
            height: 4px;
            width: 30px;
            border-radius: 2px;
        }

        .menu-button::before {
            content: "";
            margin-top: -8px;
        }

        .menu-button::after {
            content: "";
            margin-top: 8px;
        }

        .menu-toggle:checked + .navbar-menu li {
            display: block !important;
        }

        .navbar-menu > li {
            display: flex;
        }
    }
</style>
