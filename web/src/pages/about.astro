---
import Layout from "../layouts/Layout.astro";
import Contact from "../components/Contact.astro";
import Hero from "../components/Hero.astro";
import grid from "../assets/grid.svg";
import greenLogo from "../assets/green-logo.svg";
import trevor from "../assets/trevor.png";
---

<Layout title="About">
    <main class="page">
        <Hero mainImg={greenLogo.src} backgroundImg={grid.src} about={true}>
            <h1 class="title" slot="header">
                Driving Your Success through Frictionless Solutions
            </h1>
            <span class="subline" slot="subline">
                At Start Serverless, we are dedicated to helping businesses
                thrive with the power of serverless solutions. Our expert team
                delivers scalable, cost-efficient, and event-driven
                architectures tailored to your meet business goals.
            </span>
        </Hero>
        <div class="team">
            <h2 class="title">About Me</h2>
            <div class="bios">
                <div class="bio">
                    <img
                        class="portrait"
                        src={trevor.src}
                        alt=""
                        width="385"
                        height="360"
                    />
                    <h3 class="name">TREVOR COHEN</h3>
                </div>
            </div>
        </div>
        <Contact />
    </main>
</Layout>

<style>
    .page {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        grid-column-gap: 0px;
        grid-row-gap: 0px;
        background-color: #181818;
    }

    .title {
        margin: 0.67em 0;
        margin-bottom: 10px;
        margin-top: 20px;
        font-family: Electrolize, sans-serif;
        color: #fff;
        font-size: 51px;
        line-height: 120.00000476837158%;
        font-weight: 400;
        letter-spacing: 0em;
    }

    .subline {
        font-family: Titillium Web, sans-serif;
        color: #fff;
        font-size: 24px;
        line-height: 150%;
        font-weight: 400;
        letter-spacing: 0em;
    }

    .team {
        display: flex;
        background-color: #181818;
        padding: 80px 24px 112px;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
        row-gap: 64px;
    }

    .founding {
        font-size: 32px;
    }

    .bios {
        display: flex;
        justify-content: center;
        column-gap: 48px;
    }

    .name {
        font-family: "Titillium Web", sans-serif;
        color: #00e399;
        font-size: 20px;
        line-height: 150%;
        font-weight: 700;
        text-align: center;
        letter-spacing: 0em;
    }

    .portrait {
    }

    @media screen and (max-width: 991px) {
        .bios {
            flex-direction: column;
        }
        .title {
            text-align: center;
        }
    }

    @media screen and (max-width: 479px) {
        .title {
            font-size: 32px;
            text-align: center;
            width: 100%;
            margin: 0;
        }
    }
</style>
