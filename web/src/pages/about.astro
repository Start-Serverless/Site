---
import Layout from "../layouts/Layout.astro";
import Contact from "../components/Contact.astro";
import Hero from "../components/Hero.astro";
import grid from "../assets/grid.svg";
import greenLogo from "../assets/green-logo.svg";
import trevor from "../assets/trevor.png";
---

<Layout title="About">
    <main class="page">
        <Hero mainImg={greenLogo.src} backgroundImg={grid.src} about={true}>
            <h1 class="title" slot="header">
                Driving Your Success Through Frictionless Solutions
            </h1>
            <p class="subline">Are you tired of slow development cycles?</p>
            <p class="subline">
                Are you overwhelmed by the amount of services in AWS?
            </p>
            <p class="subline">Is your AWS bill spiraling out of control?</p>
            <p class="subline">Do you want your business to win?</p>
        </Hero>
        <div class="team">
            <h2 class="title">About Me</h2>
            <div class="bio">
                <div class="frame">
                    <img
                        class="portrait"
                        src={trevor.src}
                        alt=""
                        width="385"
                        height="360"
                    />
                    <h3 class="name">TREVOR COHEN</h3>
                </div>
                <p class="subline who">
                    Hi, I'm Trevor Cohen, and I have shipped serverless
                    soulutions nationwide. I help small teams dream big and
                    achieve even bigger.
                </p>
                <p class="subline who"></p>
            </div>
        </div>
        <Contact />
    </main>
</Layout>

<style>
    .page {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        grid-column-gap: 0px;
        grid-row-gap: 0px;
        background-color: #181818;
    }

    .who {
        padding-left: 64px;
        padding-right: 64px;
    }

    .title {
        margin: 0.67em 0;
        margin-bottom: 10px;
        margin-top: 20px;
        font-family: Electrolize, sans-serif;
        color: #fff;
        font-size: 51px;
        line-height: 120.00000476837158%;
        font-weight: 400;
        letter-spacing: 0em;
    }

    .subline {
        font-family: Titillium Web, sans-serif;
        color: #fff;
        font-size: 24px;
        line-height: 150%;
        font-weight: 400;
        letter-spacing: 0em;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    .team {
        display: flex;
        background-color: #181818;
        padding: 80px 24px 112px;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
        row-gap: 64px;
    }

    .founding {
        font-size: 32px;
    }

    .bio {
        display: flex;
    }

    .bios {
        display: flex;
        justify-content: center;
        column-gap: 48px;
    }

    .name {
        font-family: "Titillium Web", sans-serif;
        color: #00e399;
        font-size: 20px;
        line-height: 150%;
        font-weight: 700;
        text-align: left;
        margin-left: 70px;
        letter-spacing: 0em;
    }

    .portrait {
        display: flex;
        align-self: center;
    }

    .frame {
        display: flex;
        flex-direction: column;
    }

    @media screen and (max-width: 991px) {
        .bio {
            flex-direction: column;
        }

        .portrait {
            display: flex;
            align-self: center;
        }

        .title {
            text-align: center;
        }

        .frame {
            flex-direction: column;
            align-items: center;
        }

        .name {
            margin-left: 0%;
        }

        .subline {
            align-self: center;
        }
    }

    @media screen and (max-width: 479px) {
        .title {
            font-size: 32px;
            text-align: center;
            width: 100%;
            margin: 0;
        }

        .who {
            padding-left: 32px;
            padding-right: 32px;
        }

        .subline {
            font-size: 22px;
        }
    }
</style>
