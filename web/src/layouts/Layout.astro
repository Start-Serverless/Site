---
import favicon from "../assets/favicon.png";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
export interface Props {
    title: string;
    image: string;
}

const { title, image } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>{title}</title>
        <meta content="width=device-width, initial-scale=1" name="viewport" />
        <meta
            name="description"
            content="Start Serverless is a technology consulting business helping customers deliver on their goals."
        />
        <link href={favicon.src} rel="shortcut icon" type="image/x-icon" />
        <link href={favicon.src} rel="apple-touch-icon" />
        <meta property="og:title" content={title} />
        <meta property="og:image" content={image} />
    </head>
    <body class="body">
        <Navbar />
        <slot />
        <Footer />
    </body>
</html>

<style is:global>
    * {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }

    html {
        height: 100%;
    }

    html.w-mod-touch * {
        background-attachment: scroll !important;
    }

    body {
        margin: 0;
        min-height: 100%;
        font-family: Arial, sans-serif;
        font-size: 14px;
        line-height: 20px;
        color: #333;
        background-color: #181818;
    }
</style>
