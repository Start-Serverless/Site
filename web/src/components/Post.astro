---
import type { CollectionEntry } from "astro:content";

export interface Props {
    post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
---

<li>
    <a href={`/blog/${post.slug}/index.html`} class="post">
        <img
            src={post.data.image.src}
            alt=""
            width="390"
            height="260"
            class="splash"
        />
        <div class="post-content">
            <h2 class="heading">{post.data.title}</h2>
            <div class="preview">{post.data.description}</div>
            <span class="read-more">// READ MORE</span>
        </div>
    </a>
</li>
<style>
    .post {
        display: flex;
        flex-direction: row;
        align-content: space-between;
        grid-column-gap: 48px;
        grid-row-gap: 48px;
        margin-bottom: 64px;
    }

    .post-content {
        display: flex;
        flex-direction: column;
    }

    a {
        text-decoration: none;
        color: #333 !important;
    }

    .heading {
        font-family: Electrolize, sans-serif;
        font-size: 32px;
        margin-top: 0px;
        line-height: 32px;
    }

    .preview {
        font-family: "Titillium Web", sans-serif;
        margin-bottom: auto;
    }

    .read-more {
        color: #181818;
    }

    .read-more:hover {
        color: #00e399;
        font-family: "Titillium Web", sans-serif;
        font-weight: bold;
    }

    @media screen and (max-width: 991px) {
        .post {
            grid-column-gap: 20px;
            grid-row-gap: 20px;
        }

        .heading {
            font-size: 22px;
            margin-top: 5px;
        }
    }

    @media screen and (max-width: 767px) {
        .post {
            flex-direction: column;
        }
        .splash {
            width: 100%;
            align-self: center;
        }
        .read-more {
            margin-top: 20px;
        }
    }

    @media screen and (max-width: 550px) {
        .post {
            grid-row-gap: 10px;
        }

        p.preview {
            margin-top: 0px;
        }

        .splash {
            /* width: 326px; */
            width: 100%;
            height: auto;
        }
    }
</style>
