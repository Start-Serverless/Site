---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <div class="scroll">
      <div class="navbar">
        <img src="" alt="" />
        <ul class="nav-links">
          <!-- <li class="nav-item"><a href="">Home</a></li> -->
          <li class="nav-item"><a href="#services">Services</a></li>
          <li class="nav-item"><a href="#contact">Contact</a></li>
        </ul>
      </div>
      <div class="home">
        <h1>Remove friction from your business by Starting Serverless</h1>
      </div>
      <div id="services" class="services">
        <Card title="Design. Build. Deliver" body="" />
        <Card title="Architecture as a Service" body="" />
      </div>
    </div>
  </main>
</Layout>

<style>
  .home {
    height: 100vh;
    width: 100vw;
    align-items: center;
    justify-content: center;
    display: flex;
  }
  .services {
    height: 100vh;
    width: 100vw;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }
  .scroll {
    overflow-x: hidden;
    overflow-y: auto;
  }

  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    /* width: 100%;
    list-style-type: none;
    margin: 0 auto;
    /* padding: 0; */
    /* overflow: hidden; */
    /* position: fixed; */
  }

  .nav-links {
    display: flex;
  }

  .nav-item {
    display: inline;
  }

  h1 {
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    width: 800px;
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
  a {
    color: inherit;
  }
</style>
